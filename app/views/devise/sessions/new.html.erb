<section class="login container">
  <div class="row">
    <h1 class="sample col-sm-4 col-sm-offset-4 text-center"style="font-family:Billabong">Samplegram</h1>
  </div>

  <div class="row">
    <div class="text-center col-sm-4 col-sm-offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-inline">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true %>
      </div>
      <div class="field form-inline">
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, placeholder: "パスワード", class: "form-control", autocomplete: "off" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field form-inline">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions form-inline">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="text-center col-sm-4 col-sm-offset-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>

<section class="signup container">
  <div class="row">
    <h1 class="sample  text-center"style="font-family:Billabong">Samplegram</h1>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field form-inline">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true %>
      </div>
      <div class="field form-inline">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, placeholder: "パスワード", class: "form-control", autocomplete: "off" %>
      </div>
      <div class="field form-inline">
        <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "form-control",autocomplete: "off" %>
      </div>
      <div class="actions form-inline">
        <%= f.submit "登録する", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>


    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</section>

<section class="signup container">
  <div class="row">
    <h1 class="sample col-sm-4 col-sm-offset-4 text-center"style="font-family:Billabong">Samplegram</h1>
  </div>
  <div class="row">
    <div class="text-center col-sm-4 col-sm-offset-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_messages! %>
      <div class="field form-inline">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true %>
      </div><br />
      <div class="field form-inline">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上のパスワードを設定してください)</em>
        <% end %>
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, placeholder: "パスワード", class: "form-control", autocomplete: "off" %>
      </div><br />
      <div class="field form-inline">
        <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "form-control",autocomplete: "off" %>
      </div><br />
      <div class="actions form-inline">
        <%= f.submit "登録する", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</section>

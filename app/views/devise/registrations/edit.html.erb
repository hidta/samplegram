<section class="edituser container">
  <div class="row">
    <h1 class="col-sm-4 col-sm-offset-4 text-center" style="font-family:Billabong">Edit <%= resource_name.to_s.humanize %></h1>
  </div>

  <div class="row">
    <div class="text-center col-sm-4 col-sm-offset-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <% if flash[:notice] %>
          <div clas="alert alert-success">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <div class="field form-inline">
          <%= f.label :name, class: "sr-only" %>
          <%= f.text_field :name, placeholder: "名前", class: "form-control" %>
        </div><br />
        <div class="field form-inline">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, class: "form-control", autofocus: true %>
        </div><br />
        <div class="field">
          <%= profile_img(@user) if profile_img(@user) %><br />
          <%= f.hidden_field :icon_cache %>
          <%= f.file_field :icon, class: "center-block" %>
        </div><br />

        <div class="settingpass">
          <% if @user.provider.blank? %>
          <h3>パスワードの再設定</h3>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :password, class: "sr-only" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "新しいパスワードを入力してください" %><br />
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %>文字以上を設定してください</em>
              <% end %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, class: "sr-only" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "新しいパスワードをもう一度入力してください" %>
            </div><br />

            <div class="field">
              <%= f.label :current_password, class: "sr-only" %>
              <%= f.password_field :current_password, class: "form-control", autocomplete: "off", placeholder: "現在のパスワードを入力してください" %>
            </div><br />
          <% end %>

          <div class="actions">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
      <% end %>

      <h3>Cancel my account</h3>
      <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "remove-account btn btn-denger " %></br>

      <%= link_to "Index", :back, class: "btn btn-default"%>

    </div>
  </div>
</section>
